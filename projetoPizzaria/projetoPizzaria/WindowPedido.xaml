        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projetoPizzaria"
        mc:Ignorable="d"
        Title="WindowPedido" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="12,37,0,0" TextWrapping="Wrap" Text="Cógido Cliente" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="113,37,0,0" TextWrapping="Wrap" Text="Código Item" VerticalAlignment="Top" RenderTransformOrigin="0.474,-0.134"/>
        <TextBlock HorizontalAlignment="Left" Margin="214,37,0,0" TextWrapping="Wrap" Text="Quantidade" VerticalAlignment="Top"/>
        <TextBox Name="codigoCliente" HorizontalAlignment="Left" Height="23" Margin="12,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="75"/>
        <TextBox Name="codigoItem" HorizontalAlignment="Left" Height="23" Margin="113,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="75"/>
        <TextBox Name="quantidade" HorizontalAlignment="Left" Height="23" Margin="214,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="75"/>
