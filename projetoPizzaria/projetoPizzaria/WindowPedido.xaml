        <Button Name="select" Content="Selecionar" HorizontalAlignment="Left" Margin="115,113,0,0" VerticalAlignment="Top" Width="75" FontSize="14"/>
        <Button Name="update" Content="Atualizar" HorizontalAlignment="Left" Margin="216,113,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" FontSize="14" RenderTransformOrigin="0.698,0.381"/>
        <Button Name="delete" Content="Excluir" HorizontalAlignment="Left" Margin="318,113,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1" FontSize="14"/>
        <DataGrid HorizontalAlignment="Left" Height="149" Margin="14,152,0,0" VerticalAlignment="Top" Width="700"/>
        <Button Name="confirmar" Content="Confirmar" HorizontalAlignment="Left" Margin="12,323,0,0" VerticalAlignment="Top" Width="75" FontSize="14"/>
        <Button Name="voltar" Content="Voltar" HorizontalAlignment="Left" Margin="113,323,0,0" VerticalAlignment="Top" Width="75" FontSize="14"/>
    </Grid>
</Window>
