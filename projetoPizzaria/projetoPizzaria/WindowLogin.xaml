        <TextBox Name="idLogin" HorizontalAlignment="Left" Height="23" Margin="340,113,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="142" TextChanged="TextBox_TextChanged"/>
        <TextBox Name="senhaLogin" HorizontalAlignment="Left" Height="24" Margin="340,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="142"/>
        <Button Name="entrar" Content="Entrar" HorizontalAlignment="Left" Margin="287,193,0,0" VerticalAlignment="Top" Width="195" FontSize="18"/>
        <TextBlock HorizontalAlignment="Left" Margin="287,113,0,0" TextWrapping="Wrap" Text="Id" VerticalAlignment="Top" Width="48" FontSize="18"/>
        <TextBlock HorizontalAlignment="Left" Margin="286,150,0,0" TextWrapping="Wrap" Text="Senha" VerticalAlignment="Top" FontSize="18" RenderTransformOrigin="0.257,-0.15"/>
    </Grid>
</Window>
